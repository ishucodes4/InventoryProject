<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerActivity">

    <Button
        android:id="@+id/sell"
        android:layout_width="367dp"
        android:layout_height="56dp"
        android:layout_marginBottom="300dp"
        android:background="@drawable/custom_button"
        android:text="Add New Product"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/viewAll"
        android:layout_width="367dp"
        android:layout_height="56dp"
        android:layout_marginBottom="160dp"
        android:background="@drawable/custom_button"
        android:text="View All Products"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/viewsold"
        android:layout_width="367dp"
        android:layout_height="56dp"
        android:layout_marginBottom="230dp"
        android:background="@drawable/custom_button"
        android:text="View Sold Products"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="367dp"
        android:layout_height="90dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="153dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="132dp"
        android:fontFamily="@font/butler_bold"
        android:lineSpacingExtra="10dp"
        android:text="Choose a Option \nfrom below"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/sell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>